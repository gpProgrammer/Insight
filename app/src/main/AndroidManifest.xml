<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.a2016reserch.sliit.insight">

    <!-- ACCESS_FINE_LOCATION, Which includes both ACCESS_FINE_LOCATION and ACCESS_COARSE_LOCATION -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <!-- Add INTERNET permission to getting network based location -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".InsightHomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".findplaces.MainActivity" />
        <activity android:name=".findplaces.GetBusHaltsActivity" />
        <activity android:name=".findplaces.GetNearestActivity" />
        <activity android:name=".findplaces.WalkingDirectionActivity" />
        <activity android:name=".Messaging.MessageInbox" />
        <activity android:name=".Messaging.ReadMessage" />
        <activity android:name=".Messaging.ReceiveSms" />
        <activity android:name=".Messaging.SendSms" />
        <activity android:name=".Messaging.SendSmsPhone" />
        <activity android:name=".Messaging.SendSmsMessage" />
        <activity android:name=".Messaging.SentItems"></activity>
    </application>

</manifest>